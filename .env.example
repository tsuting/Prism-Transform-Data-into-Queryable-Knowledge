# ============================================================================
# PRISM ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
#
# For local development: docker-compose -f infra/docker/docker-compose.yml --env-file .env up -d
# For Azure deployment: azd up (auto-configures everything)
# ============================================================================

# ============================================================================
# AZURE AI SEARCH (REQUIRED)
# ============================================================================
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_ADMIN_KEY=<your-search-admin-key>
AZURE_SEARCH_API_VERSION=2025-08-01-preview

# ============================================================================
# AZURE OPENAI (REQUIRED)
# ============================================================================
# Authentication: Uses DefaultAzureCredential (managed identity in Azure, CLI locally)
# API keys are NOT required when using managed identity authentication.
AZURE_OPENAI_ENDPOINT=https://<your-openai-resource>.openai.azure.com
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Chat Model (used for general chat)
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4.1

# Workflow Model (used for extraction and workflows - can be same as chat)
AZURE_OPENAI_WORKFLOW_DEPLOYMENT_NAME=gpt-5-chat

# Knowledge Agent Model (exact model name, not deployment name)
# Supported: gpt-4o, gpt-4o-mini, gpt-4.1, gpt-4.1-mini, gpt-4.1-nano
AZURE_OPENAI_AGENT_MODEL_NAME=gpt-4.1

# Embedding Model
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_MODEL_NAME=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_DIMENSIONS=1024

# ============================================================================
# AUTHENTICATION
# ============================================================================
AUTH_PASSWORD=<your-secure-password>

# ============================================================================
# AZURE STORAGE
# ============================================================================
# For local development: Azurite is used automatically (configured in docker-compose)
# For Azure deployment: These are auto-configured by azd up

# Only needed if connecting to Azure Storage from local dev:
# AZURE_STORAGE_ACCOUNT_NAME=<your-storage-account>
# AZURE_STORAGE_ACCOUNT_URL=https://<account>.blob.core.windows.net
AZURE_STORAGE_CONTAINER_NAME=prism-projects

# ============================================================================
# AZURE DOCUMENT INTELLIGENCE (PDF Extraction)
# ============================================================================
# Required for PDF extraction. No local emulator available.
# Authentication: Uses DefaultAzureCredential (managed identity in Azure, CLI locally)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://<your-di-resource>.cognitiveservices.azure.com/

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================
# Debug logging
# PRISM_LOG_LEVEL=DEBUG

# OpenTelemetry (for Azure Monitor integration)
# ENABLE_OTEL=false
